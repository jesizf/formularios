<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie add</title>
    <link rel='stylesheet' href='/css/style.css' />
    <link rel='stylesheet' href='/css/bootstrap.css' />
</head>

<body>
    <figure>
        <img src="/img/logo-DH.png" alt="Logo Digital House">
      </figure>
    <h1 class="moviesAddTitulo"></h1>
    <br>
    <section id="formulario" >
        <article >
            <form action="/movies/create" method="POST" id="form-add-movies">
                <label for="title">Titulo </label>
                <p><input class="form-control" type="text" id="title" name="title" ></p>
                <p class="text-danger small" id="error-title"></p>

                <label for="rating">Calificación </label>
                <p><input class="form-control" type="number" id="rating" name="rating" > </p>
                <p class="text-danger small" id="error-rating"></p>

                <label for="awards">Premios </label>
                <p><input class="form-control" type="number" id="awards" name="awards"></p>
                <p class="text-danger small" id="error-awards"></p>

                <label for="release_date">Fecha de creación </label>
                <p><input class="form-control" type="date" id=input-release_date" name="release_date" ></p>
                <p class="text-danger small" id="error-release_date"></p>

                <label for="length">Duración </label>
                <p><input class="form-control" type="number" id="length" name="length" ></p>
                <p class="text-danger small" id="error-length"></p>

                <label for="genreID">Género </label>
                <p>
                    <select class="form-select" name="genre_id" id="genre">
                        <option value="" disabled selected>- Seleccione el género - </option>
                        <% allGenres.forEach(genre => { %>
                        <option value="<%= genre.id %>"><%= genre.name %></option>
                        <% }); %>
                    </select>
                </p>
                <br>
                <p class="text-danger small" id="error-msg"></p>

                <p> <button class="botonAgregar" type="submit">Agregar</button>
                
                <a  class="botonVolver" href="/movies">Listado de Películas</a></p>
            </form>
        </article>
    </section>
    <script src="/js/moviesAddValidation.js"></script>
</body>
</html>